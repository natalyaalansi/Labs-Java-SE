<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane prefHeight="600.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sample.Controller">

    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <Menu text="File">
                <MenuItem text="Save" onAction="#onSave"/>
                <MenuItem text="Load" onAction="#onLoad"/>
                <MenuItem text="Close" onAction="#onClose"/>
            </Menu>

            <Menu text="Help">
                <MenuItem text="About" onAction="#onAbout"/>
            </Menu>
        </MenuBar>
    </top>
    <bottom>
        <HBox prefHeight="67.0" prefWidth="600.0" BorderPane.alignment="CENTER"/>
    </bottom>

    <center>
        <TextArea fx:id="areaText" prefHeight="276.0" prefWidth="600.0" BorderPane.alignment="CENTER"/>
    </center>
</BorderPane>
